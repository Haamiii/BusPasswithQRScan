<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Teal"
    tools:context=".Admin.AddMoreJourneys_add_admin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/Seakale">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/icbackButnNJadmin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/Seakale"
                    android:contentDescription="TODO"
                    android:src="@drawable/back_arrow"
                    tools:ignore="TouchTargetSizeCheck" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add New Journeys"
                    android:textSize="23dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="80dp"
                    android:textColor="@color/white"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <ImageView
            android:id="@+id/imageBusadmin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/verify"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Verified"
        android:textSize="23dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textStyle="bold">
    </TextView>
    <ImageView
        android:id="@+id/imageqradmin"
        android:layout_width="400dp"
        android:layout_height="330dp"
        android:src="@drawable/qr_code"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal|center"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp"
            android:id="@+id/cd"
            app:cardBackgroundColor="@color/Seakale">

            <EditText
                android:id="@+id/etnameNJadmin"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/white"
                android:hint="No of Journeys"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|center_vertical|bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry Date: "
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginLeft="30dp"/>

            <EditText
                android:id="@+id/fromdatepicker"
                android:layout_width="100dp"
                android:paddingLeft="8dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:background="@drawable/bg_stroke"
                android:hint="DD/MM/YY"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"

                tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:text="ADD"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/cd1"
            android:textColor="@color/Teal"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/ADD_NA_admin"/>


    </LinearLayout>
</FrameLayout>