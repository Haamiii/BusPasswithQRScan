<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Teal"
    tools:context=".Admin.AddAdminFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/Seakale">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textSize="23dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:textStyle="bold">
        </TextView>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="30dp" >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnnewstudet"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/roundedbutton"
            android:text="Add New Student"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnnewconductor"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/roundedbutton"
            android:text="Add New Conductor"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="30dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnrechargejourney"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/roundedbutton"
            android:text="Recharge Journeys"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnnewbusses"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/roundedbutton"
            android:text="Add New Buses"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="30dp"  >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnnewadmin"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/roundedbutton"
            android:text="Add New Admin"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnsearchupdate"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/roundedbutton"
            android:text="Search and update"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="20dp" />

    </LinearLayout>



</FrameLayout>