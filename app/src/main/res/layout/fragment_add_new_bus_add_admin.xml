<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Teal"
    tools:context=".Admin.AddNewBus_add_admin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/Seakale">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/icbackButnNBadmin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/Seakale"
                    android:contentDescription="TODO"
                    android:src="@drawable/back_arrow"
                    tools:ignore="TouchTargetSizeCheck" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add New Admin"
                    android:textSize="23dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="80dp"
                    android:textColor="@color/white"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>


        <ImageView
            android:id="@+id/imageBusadmin"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/bus_logo"
            android:layout_marginTop="-50dp"
            android:layout_gravity="center_horizontal"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="230dp"
            android:layout_gravity="center_horizontal|center"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp"
            android:id="@+id/cd"
            app:cardBackgroundColor="@color/Seakale">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bus Information"
                android:textSize="23dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etnameNBadmin"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:backgroundTint="@color/white"
                android:hint="Bus Registration No"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
            <EditText
                android:id="@+id/etseatsNBadmin"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:backgroundTint="@color/white"
                android:hint="Seats"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"/>
            <Spinner
                android:id="@+id/spcategorys_uaddAdmin"
                android:paddingLeft="8dp"
                android:layout_marginTop="120dp"
                android:layout_width="355dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textAlignment="center"
                android:outlineAmbientShadowColor="@color/white"
                android:popupBackground="@color/white"
                android:background="@drawable/bg_stroke"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:minHeight="48dp" />

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:text="ADD"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/cd1"
            android:textColor="@color/Teal"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/ADD_NA_admin"/>


    </LinearLayout>

</FrameLayout>