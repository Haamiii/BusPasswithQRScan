<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Teal"
    tools:context=".Parent.Notificationparent_details">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/Seakale">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/backframe"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/Seakale">

                <ImageButton
                    android:id="@+id/ivback"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/Seakale"
                    android:contentDescription="TODO"
                    android:src="@drawable/back_arrow"
                    tools:ignore="TouchTargetSizeCheck" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Detailsp"
                android:textSize="23dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="70dp"
                android:textColor="@color/white"
                android:textStyle="bold">
            </TextView>


        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="377dp"
            android:layout_marginTop="-45dp"
            android:src="@drawable/for_notif_details" />

        <ImageView
            android:layout_width="317dp"
            android:layout_height="259dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/checkout_big"
            />
        <TextView
            android:id="@+id/tv_stopTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Out!"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="280dp"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/Seakale"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                tools:ignore="TextSizeCheck" />
            <TextView
                android:id="@+id/tvdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/26/25"
                android:textStyle="bold"
                android:textColor="@color/Teal"
                android:textSize="23dp"
                android:layout_marginLeft="20dp"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="@color/Seakale"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                tools:ignore="TextSizeCheck" />
            <TextView
                android:id="@+id/tvtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:30 AM"
                android:textStyle="bold"
                android:textColor="@color/Teal"
                android:textSize="23dp"
                android:layout_marginLeft="20dp"
                tools:ignore="TextSizeCheck" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Teal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discription"
                android:textColor="@color/Seakale"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                tools:ignore="TextSizeCheck" />
            <TextView
                android:id="@+id/tvDiscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checked out at University"
                android:textStyle="bold"
                android:textColor="@color/Teal"
                android:textSize="23dp"
                android:layout_marginLeft="20dp"
                tools:ignore="TextSizeCheck" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>